include <stdio.h>

int main() {
    int arr[5] = {2, 4, 6, 8, 10};
    int sum = 0;
    float avg;
    int i;

    // Calculate the sum
    for (i = 0; i < 5; i++) {
        sum += arr[i];
    }

    // Calculate the average
    avg = (float)sum / 5;

    printf("Sum: %d\n", sum);
    printf("Average: %.2f\n", avg);

    return 0;
}
